<% provide(:title, "Log in") %> <h1>Log in</h1>
<% if flash[:notice] %>
<div class="danger">
	<%= flash[:danger] %>
</div>
<% end %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:session, url: login_path) do |f| %>

		<div class="field">
			<%= f.label :email %>
			<br>
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password %>
			<br>

			<%= f.password_field :password %>
		</div>

		<div class="actions">
			<%= f.submit  "Log in"%>
		</div>
		<% end %>

		<p>
			New user? <%= link_to "Sign up now!", signup_path %>
		</p>
	</div>
</div>